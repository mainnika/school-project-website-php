{
	print('<font id="mainplus">Изменение логина / пароля</font><br>');
	if (isset($_POST['accept']))
	{
		if (($_POST['newpass']==$_POST['newpass2']) and (md5($_POST['oldpass'])==$adminpassmd))
		{
			$_POST['newlogin']=trim($_POST['newlogin']);
			if ($_POST['newlogin']=='')
			{
				$newlogin=$adminlogin;
			}
			else
			{
				$newlogin=$_POST['newlogin'];
			};
			if ($_POST['newpass']=='')
			{
				$newpass=$adminpassmd;
			}
			else
			{
				$newpass=md5($_POST['newpass']);
			};
			$fs=fopen('inc/login','w');
			fputs($fs,'<?php'.chr(13).chr(10).'$adminlogin="'.$newlogin.'";'.chr(13).chr(10).'$adminpassmd="'.$newpass.'";'.chr(13).chr(10).'?>');
			fclose($fs);
			print('Файл "inc/login" успешно перезаписан<br><a href="?go=admin">Назад</a>');
		}
		else
		{
			print('Вы ввели неверные данные<br><a href="?go=admin&editpersonal">Назад</a>');
		};
	}
	else
	{
		print('
		<form method="post" action="">
		Новый логин: <input type="text" value="'.$adminlogin.'" name="newlogin" /><br />
		Новый пароль: <input type="password" name="newpass" /><br />
		Подтверждение: <input type="password" name="newpass2" /><br />
