	{
		print('<br><form name="editnavigform" method="post" action=""><table border="0" cellspacing="0" cellpadding="0"><tr><td valign="top">Название страницы<br><textarea name="editednav" wrap="off" cols="22" rows="25">');
		$fs=file('inc/navig');
		$i=0;
		for ($i=0; $i<count($fs); $i=$i+1)
		{
			print(substr($fs[$i],0,strrpos($fs[$i],'|')).chr(13).chr(10));
