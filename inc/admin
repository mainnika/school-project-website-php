				<input type='hidden' name='editednav' value='".$_POST['editednav']."'><input type='hidden' name='editednavlinks' value='".$_POST['editednavlinks']."'><input type='submit' name='accept' value='Подтверждаю'></form>");
			};
		}
		else
		{
