				$texta=explode(chr(13).chr(10),$text);
				$linka=array();
				$linka=explode(chr(13).chr(10),$link);
				$i=0;
				print('<hr>');
				for ($i=0; $i<count($linka); $i=$i+1)
				{
					if (($texta[$i]!='') and ($linka[$i]!=''))
					{
						print('<img alt=">" src="site_img/linkimg.png"> <a href="?go='.$linka[$i].'">'.$texta[$i].'</a><br>');
					};
