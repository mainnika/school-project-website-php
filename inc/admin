		print('</textarea></td><td valign="top">Адрес страницы');

		print('<br><textarea wrap="off" name="editednavlinks" cols="22" rows="25">');
		$fs=file('inc/navig');
		$i=0;
		for ($i=0; $i<count($fs); $i=$i+1)
		{
			print(substr($fs[$i],strrpos($fs[$i],'=')+1));
		};
		print('</textarea></td><td valign="top">Существующие страницы:<br><script>
				function addtext(ibTag) {
				var obj_ta=document.editnavigform.editednavlinks;
				var myAgent   = navigator.userAgent.toLowerCase();
				var myVersion = parseInt(navigator.appVersion);
				var is_win   =  ((myAgent.indexOf("win")!=-1) || (myAgent.indexOf("16bit")!=-1));
				var is_ie   = ((myAgent.indexOf("msie") != -1)  && (myAgent.indexOf("opera") == -1));
				if ( (myVersion >= 4) && is_ie && is_win)
				{
				if(obj_ta.isTextEdit){
				obj_ta.focus();
				var sel = document.selection;
				var rng = sel.createRange();
				rng.colapse;
				if((sel.type == "Text" || sel.type == "None") && rng != null){
				if(rng.text.length > 0)
				ibTag += rng.text;
				else 
				rng.text = ibTag;
				}
				}
				else{
				obj_ta.value += ibTag;
				}
				}
				else
				{
				var txtStart = obj_ta.selectionStart;
				obj_ta.value=obj_ta.value.substring(0,txtStart)+ibTag+obj_ta.value.substring(txtStart,obj_ta.value.length);
				};		
				}
				</script>');
		   print('<a href="javascript://" onclick="addtext(\'admin\')">Панель администратора</a><br>');
		   print('<a href="javascript://" onclick="addtext(\'news\')">Новости</a><br>');


	$dir='index/';
    if ($dh = opendir($dir)) 
    { 
        while (($file = readdir($dh)) !== false) 
        { 
          if (($file!='.') and ($file!='..'))
		   {
		   $fs=file($dir.$file);
		   print('<a href="javascript://" onclick="addtext(\''.$file.'\')">'.$fs[0].'</a><br>');
		   
		   }
        } 
        closedir($dh); 
	};

		print('</td></tr></table>');
		print('</td></tr></table><br />
		<input type="submit" name="submit" value="Изменить" />
